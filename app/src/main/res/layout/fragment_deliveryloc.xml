<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.fmd.cocecl.fragments.deliverylocFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#000000"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aofield"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="100"
                    android:background="@drawable/edittext_style_1"
                    android:clickable="true"
                    android:editable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="@string/ao"
                    android:inputType="textPostalAddress"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_dark_material_dark"
                    android:textColorHint="@color/primary_dark_material_dark" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_navigation_black_18dp"
                    android:enabled="true"
                    android:onClick="navigate"
                    android:text="@string/nav" />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/aofield"
                android:background="@drawable/edittext_style_1"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/abt"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_dark_material_dark"
                android:textColorHint="@color/primary_dark_material_dark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:background="@drawable/edittext_style_1"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/tcnr"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_dark_material_dark"
                android:textColorHint="@color/primary_dark_material_dark" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#000000"></View>


            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_call_black_18dp"
                android:enabled="true"
                android:onClick="lscall"
                android:text="LS Bettenvergabe" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#000000"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/changepatbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_person_add_black_24dp"
                    android:onClick="createpat"
                    android:text="Pat. Daten Ã¤ndern" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:enabled="false"
                    android:onClick="patmanstart"
                    android:text="PatMan" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
