<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="it.fmd.cocecl.fragments.reloc_homeFragment">

    <!-- Fragment wird beim EinrÃ¼cken oder Verlegen geladen -->

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tasktype"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_style_1"
            android:gravity="center"
            android:hint="Einsatzart"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="@color/primary_dark_material_dark" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="false"
            android:clickable="false"
            android:enabled="true"
            android:gravity="center"
            android:hint="@string/ssig" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button44"
        android:layout_centerHorizontal="true"
        android:text="@string/status"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/statusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button41"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView82"
        android:layout_toLeftOf="@+id/textView82"
        android:layout_toStartOf="@+id/textView82"
        android:background="@drawable/edittext_style_1"
        android:gravity="center"
        android:hint="aktueller status"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView82"
        android:layout_toRightOf="@+id/statusView"
        android:clickable="true"
        android:enabled="true"
        android:hint="status weiterschalten"
        android:onClick="stbtnClick" />

    <View
        android:id="@+id/button44"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignEnd="@+id/button41"
        android:layout_alignRight="@+id/button41"
        android:layout_below="@+id/linearLayout5"
        android:background="#000000"></View>

    <View
        android:id="@+id/view4"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statusView"
        android:layout_marginBottom="10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/aofield"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view4"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_style_1"
        android:clickable="true"
        android:editable="false"
        android:enabled="false"
        android:gravity="center"
        android:hint="@string/ao"
        android:inputType="textPostalAddress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignEnd="@+id/button41"
        android:layout_alignRight="@+id/button41"
        android:layout_below="@+id/aofield"
        android:background="#000000"></View>

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/aofield"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_navigation_black_18dp"
        android:enabled="true"
        android:onClick="navigate"
        android:text="@string/nav" />

</RelativeLayout>
