<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="it.fmd.cocecl.reloc_homeFragment">

    <!-- Fragment wird beim EinreÃ¼cken oder Verlegen geladen -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout5"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="@color/primary_dark_material_dark"
            android:hint="Einsatzart"
            android:gravity="center"
            android:id="@+id/textView7"
            android:background="@drawable/edit_text_style"
            android:layout_gravity="left"
            android:layout_marginRight="50dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ssig"
            android:id="@+id/checkBox"
            android:checked="false"
            android:clickable="false"
            android:enabled="true"
            android:layout_gravity="right"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STATUS"
        android:id="@+id/textView82"
        android:layout_below="@+id/button44"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView83"
        android:layout_below="@+id/textView82"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView82"
        android:layout_toStartOf="@+id/textView82"
        android:hint="aktueller status"
        android:layout_alignBottom="@+id/button41"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button41"
        android:layout_below="@+id/textView82"
        android:layout_toRightOf="@+id/textView83"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="status weiterschalten"
        android:enabled="true"
        android:clickable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignRight="@+id/button41"
        android:layout_alignEnd="@+id/button41"
        android:id="@+id/button44">
    </View>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_below="@+id/textView83"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view4"
        android:layout_marginBottom="10dp">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark"
        android:hint="@string/ao"
        android:id="@+id/aofield"
        android:editable="false"
        android:enabled="false"
        android:inputType="textPostalAddress"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/view4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_alignRight="@+id/button41"
        android:layout_alignEnd="@+id/button41"
        android:layout_below="@+id/aofield">
    </View>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAVIGATE"
        android:id="@+id/button19"
        android:clickable="true"
        android:enabled="true"
        android:drawableLeft="@drawable/ic_navigation_black_18dp"
        android:onClick="navao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/aofield" />

</RelativeLayout>
