<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.fmd.cocecl.incident">

    <!-- Fragment wird bei Einsatz oder Auftrag geladen -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout5"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="@color/primary_dark_material_dark"
            android:hint="Einsatzart"
            android:gravity="center"
            android:id="@+id/textView7"
            android:background="@drawable/edit_text_style"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ssig"
            android:id="@+id/checkBox"
            android:checked="false"
            android:clickable="false"
            android:enabled="true"
            android:layout_gravity="right"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STATUS"
        android:id="@+id/textView82"
        android:layout_below="@+id/linearLayout6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView83"
        android:layout_below="@+id/textView82"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView82"
        android:layout_toStartOf="@+id/textView82"
        android:hint="aktueller status"
        android:layout_alignBottom="@+id/button41"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button41"
        android:layout_below="@+id/textView82"
        android:layout_toRightOf="@+id/textView83"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="status weiterschalten"
        android:enabled="true"
        android:clickable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_below="@+id/textView83"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view7">
    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/view7">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button41">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/bofield"
            android:enabled="true"
            android:clickable="false"
            android:textColor="@color/primary_dark_material_dark"
            android:textColorHint="@color/primary_dark_material_dark"
            android:gravity="center"
            android:hint="@string/bo"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text_style"
            android:editable="false"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_dark_material_dark"
            android:textColorHint="@color/primary_dark_material_dark"
            android:gravity="center"
            android:hint="@string/info"
            android:id="@+id/infofield"
            android:inputType="text"
            android:enabled="false"
            android:layout_below="@+id/bgfield"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text_style"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_dark_material_dark"
            android:textColorHint="@color/primary_dark_material_dark"
            android:gravity="center"
            android:hint="@string/brfr"
            android:id="@+id/brfrfield"
            android:inputType="phone"
            android:enabled="false"
            android:clickable="true"
            android:layout_below="@+id/infofield"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8"
            android:background="@drawable/edit_text_style"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="@string/nav"
            android:id="@+id/button18"
            android:clickable="true"
            android:enabled="true"
            android:drawableLeft="@drawable/ic_navigation_black_18dp"
            android:onClick="navbo"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#000000"
            android:layout_marginTop="10dp">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/linearLayout4"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/stbutton10"
                android:textSize="12dp"
                android:id="@+id/button10"
                android:clickable="true"
                android:onClick="st10"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_call_missed_black_18dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/stbutton13"
                android:textSize="12dp"
                android:id="@+id/button13"
                android:clickable="true"
                android:onClick="st13"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_repeat_black_18dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/stbutton11"
                android:textSize="12dp"
                android:id="@+id/button11"
                android:clickable="true"
                android:onClick="st11"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_directions_run_black_18dp"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
