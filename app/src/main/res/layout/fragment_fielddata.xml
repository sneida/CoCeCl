<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.fmd.cocecl.fielddata"
    android:background="#757575">

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="@color/primary_dark_material_dark"
        android:hint="Einsatzart"
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edit_text_style"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/ssig"
        android:id="@+id/checkBox"
        android:layout_above="@+id/space3"
        android:layout_alignRight="@+id/space3"
        android:layout_alignEnd="@+id/space3"
        android:checked="false"
        android:clickable="false"
        android:onClick="checkBox"
        android:enabled="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/space3"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/space3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/space3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bofield"
        android:enabled="true"
        android:clickable="false"
            android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark"
            android:gravity="center"
        android:hint="@string/bo"
            android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_text_style"
            android:editable="false"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark"
        android:gravity="center"
        android:hint="@string/bg"
        android:id="@+id/bgfield"
        android:inputType="text"
        android:enabled="false"
        android:layout_below="@+id/bofield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_text_style"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark"
        android:gravity="center"
        android:hint="@string/info"
        android:id="@+id/infofield"
        android:inputType="text"
        android:enabled="false"
        android:layout_below="@+id/bgfield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_text_style"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_dark_material_dark"
        android:textColorHint="@color/primary_dark_material_dark"
        android:gravity="center"
        android:hint="@string/brfr"
        android:id="@+id/brfrfield"
        android:inputType="phone"
        android:enabled="false"
        android:clickable="true"
        android:layout_below="@+id/infofield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:background="@drawable/edit_text_style"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAVIGATE"
            android:id="@+id/button18"
            android:clickable="true"
            android:enabled="true"
            android:drawableLeft="@drawable/ic_navigation_black_18dp"
            android:onClick="navbo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#000000"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </View>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/eingeteiltefzg"
        android:id="@+id/engtlfzg"
        android:enabled="false"
        android:layout_below="@+id/brfrfield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignParentBottom="true"
            android:textColor="#ff000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>
