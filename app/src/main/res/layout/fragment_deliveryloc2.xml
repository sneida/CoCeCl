<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    android:paddingLeft="@dimen/cardview_horizontal_margin"
    android:paddingRight="@dimen/cardview_horizontal_margin"
    android:paddingTop="@dimen/cardview_vertical_margin"
    android:paddingBottom="@dimen/cardview_vertical_margin"
    tools:context="it.fmd.cocecl.mainstatus"
    android:id="@+id/mainstatusfraglayout"
    android:background="#bdbdbd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="5dp"
                cardview:cardBackgroundColor="#ffffff">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Abgabeort"
                        android:id="@+id/textView117"
                        android:textColor="#00b0ff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Ziel POI"
                        android:id="@+id/textView118"
                        android:textColor="#ff9800"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/primary_dark_material_dark"
                            android:textColorHint="@color/primary_dark_material_dark"
                            android:hint="@string/ao"
                            android:id="@+id/aofield"
                            android:editable="false"
                            android:enabled="false"
                            android:inputType="textPostalAddress"
                            android:clickable="true"
                            android:gravity="center"
                            android:background="@drawable/edittext_style_3"
                            android:layout_weight="100"/>

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="NAVI"
                            android:id="@+id/button19"
                            android:clickable="true"
                            android:enabled="true"
                            android:drawableTop="@drawable/ic_navigation_black_18dp"
                            android:onClick="navigate"
                            style="@style/MainStatusButtonStyle"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/primary_dark_material_dark"
                        android:textColorHint="@color/primary_dark_material_dark"
                        android:hint="@string/abt"
                        android:id="@+id/textView6"
                        android:inputType="text"
                        android:enabled="false"
                        android:gravity="center"
                        android:background="@drawable/edittext_style_3"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/primary_dark_material_dark"
                        android:textColorHint="@color/primary_dark_material_dark"
                        android:hint="@string/tcnr"
                        android:id="@+id/textView12"
                        android:inputType="number"
                        android:enabled="false"
                        android:gravity="center"
                        android:background="@drawable/edittext_style_3"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="4dp"
                android:layout_marginTop="10dp"
                cardview:cardBackgroundColor="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Patienten Management"
                        android:id="@+id/textView119"
                        android:textColor="#00b0ff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Aktion"
                        android:id="@+id/textView120"
                        android:textColor="#ff9800" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="2">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LS Betten"
                        android:id="@+id/button17"
                        android:drawableLeft="@drawable/ic_call_black_18dp"
                        android:enabled="true"
                        android:clickable="true"
                        android:onClick="lscall"
                        style="@style/MainStatusButtonStyle"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ziel KH"
                        android:id="@+id/button30"
                        android:drawableLeft="@drawable/ic_call_black_18dp"
                        style="@style/MainStatusButtonStyle"
                        android:layout_weight="1"/>

                </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:weightSum="2">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pat. Daten Ã¤ndern"
                            android:id="@+id/changepatbtn"
                            android:drawableLeft="@drawable/ic_person_add_black_24dp"
                            android:onClick="createpat"
                            style="@style/MainStatusButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PatMan"
                            android:id="@+id/button21"
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:onClick="patmanstart"
                            style="@style/MainStatusButtonStyle"
                            android:enabled="true"
                            android:clickable="true"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                cardview:cardBackgroundColor="#ffffff">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Patientendaten"
                        android:id="@+id/textView121"
                        android:textColor="#00b0ff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Anzahl Pat"
                        android:id="@+id/textView122"
                        android:textColor="#ff9800"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Nachname"
                        android:id="@+id/textView123"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Vorname"
                        android:id="@+id/textView124"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="SVNR.Geburtstag"
                        android:id="@+id/textView125"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Gender"
                        android:id="@+id/textView126"
                        android:textColor="#000000"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/patrv" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>