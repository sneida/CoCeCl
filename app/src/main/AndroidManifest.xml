<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.fmd.cocecl"
    android:versionCode="1"
    android:versionName="0.0.11" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" >
    </uses-sdk>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens= "true"
        android:anyDensity="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/cocecl"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault"
        android:logo="@mipmap/cocecl">

        <activity
            android:name=".infoActivity"
            android:label="@string/app_name" >
            #android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            #android:screenOrientation="portrait" >
        </activity>

        <!--
        not an activity -> is a Fragment
        <activity
            android:name=".statusFragment"
            android:label="@string/statustab" >
        </activity>
        <activity
            android:name=".fielddataFragment"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".deliverylocFragment"
            android:label="@string/deliverylocFragment">
        </activity>
        -->

        <activity
            android:name=".loginactivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            #android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
            #android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".patmanActivity"
            android:label="@string/title_activity_patman"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
